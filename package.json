{
  "name": "unbundled-db-playground",
  "version": "1.0.0",
  "description": "Learning DDIA's Unbundled Database Architecture with TypeScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:api": "tsx watch src/api/server.ts",
    "dev:search-indexer": "tsx watch src/consumers/search-indexer.ts",
    "dev:cache-updater": "tsx watch src/consumers/cache-updater.ts",
    "setup:debezium": "tsx src/setup/setup-debezium.ts",
    "setup:elasticsearch": "tsx src/setup/setup-elasticsearch.ts",
    "test:insert": "tsx src/scripts/test-insert.ts",
    "test:search": "tsx src/scripts/test-search.ts",
    "test": "vitest run",
    "test:unit": "vitest run unit",
    "test:integration": "bash scripts/run-integration-tests.sh",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "setup": "bash scripts/setup.sh",
    "consumers:start": "bash scripts/start-consumers.sh",
    "consumers:stop": "bash scripts/stop-consumers.sh"
  },
  "keywords": [
    "ddia",
    "event-driven",
    "kafka",
    "cdc",
    "debezium",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@vitest/ui": "^1.1.0",
    "testcontainers": "^10.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
